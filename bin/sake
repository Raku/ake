#!/usr/bin/env perl6

use v6;
use Ake;

sub MAIN(*@tasks,
         :$file = ‘Sakefile’,
         :$force = False,
        ) {

    if !$file.IO.e {
        note “Could not find file $file!”;
        exit 2
    }
    EVALFILE $file;
    ake-precheck :$force;
    execute @tasks || ‘default’

    say '';
    say '==================== DEPRECATION NOTE ====================';
    say '|           `sake` has been renamed to `ake`.            |';
    say '|         Please consider using `ake` in the future.     |';
    say '==========================================================';
    say '';
}
